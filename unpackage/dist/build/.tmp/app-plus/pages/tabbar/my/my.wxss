.my-page {
  background: #f2f2f2;
  height: 100%;
}
.my-page .header {
    padding: 15rpx 30rpx;
}
.my-page .header .userMsg {
      background-image: -o-linear-gradient(290deg, #F5D197 40%, #DDB26F 80%);
      background-image: linear-gradient(160deg, #F5D197 40%, #DDB26F 80%);
      border-radius: 12rpx;
      color: #7D6040;
      padding: 15rpx 30rpx;
}
.my-page .header .userMsg .member {
        float: right;
        color: #999;
}
.my-page .header .userMsg .my-msg view {
        display: inline-block;
}
.my-page .header .userMsg .my-msg .tx {
        width: 100rpx;
        height: 100rpx;
        line-height: 100rpx;
        border-radius: 50%;
        margin-right: 10rpx;
}
.my-page .header .userMsg .my-msg .tx .image {
          width: 100rpx;
          height: 100rpx;
          border-radius: 50%;
}
.my-page .header .userMsg .my-msg .middle {
        vertical-align: top;
}
.my-page .header .userMsg .my-msg .middle .text {
          display: block;
          font-weight: bold;
}
.my-page .header .hotel-msg {
      padding-top: 15rpx;
}
.my-page .header .hotel-msg .tabs .tab {
        display: inline-block;
        width: 210rpx;
        text-align: center;
        color: #7D6040;
}
.my-page .header .hotel-msg .tabs .tab .iconfont {
          color: #999;
          font-size: 24rpx;
}
.my-page .mains .orders {
    background-color: #fff;
}
.my-page .mains .orders .iconfont {
      font-size: 1rem;
}
.my-page .mains .orders .text {
      font-size: 24rpx;
      margin-top: 15rpx;
}
.my-page .mains .suduko {
    margin-top: 15rpx;
    background: #fff;
}
.my-page .mains .suduko .iconfont {
      font-size: 1rem;
}
.my-page .mains .suduko .text {
      font-size: 24rpx;
      margin-top: 15rpx;
}
.my-page .mains .btns {
    position: absolute;
    bottom: 20rpx;
    width: 100%;
}
.my-page .mains .btns .edgegap {
      padding: 15rpx 30rpx;
}
